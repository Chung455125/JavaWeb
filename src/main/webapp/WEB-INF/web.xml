	<!-- Filter宣告 -->
	<filter>
		<filter-name>UTF8EncodingFilter</filter-name>
		<filter-class>rest.filter.UTF8EncodingFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>UserFilter</filter-name>
		<filter-class>rest.filter.UserFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>CheckNameFilter</filter-name>
		<filter-class>rest.filter.CheckNameFilter</filter-class>
	</filter>
	
	<!-- Filter部署 -->
	<filter-mapping>
		<filter-name>UTF8EncodingFilter</filter-name>
		<url-pattern>/rest/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>UserFilter</filter-name>
		<url-pattern>/rest/user/*</url-pattern>
	</filter-mapping>
	
